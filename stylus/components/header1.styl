.header
  height 80px
  line-height 80px
  background-color #f0f2ed
  &__container
    width 996px
    margin 0 auto
    height 100%
    line-height 100%
    //outline 3px solid red
  &__logo, &__contact
    height 100%
    line-height 100%
    display inline-block
  .contact
    float right
    &__btn
      border: 3px solid gold;
      padding 10px 5px 10px 5px
      position relative
      font-size: 1.4rem;
      text-transform: uppercase;
      font-family: Geneva, Arial, Helvetica, sans-serif;
      top 50%
      margin-top -20px
  .logo
    top 50%
    position relative
    margin-top -22px






